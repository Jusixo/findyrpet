<%= form_for(@pet, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @pet.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h4>

      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# name %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>


  <%# species %>
  <div class="form-group">
    <%= f.label :species, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :species, class: "form-control" %>
    </div>
  </div>


  <%# breed %>
  <div class="form-group">
    <%= f.label :breed, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :breed, class: "form-control" %>
    </div>
  </div>


  <%# color %>
  <div class="form-group">
    <%= f.label :color, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :color, class: "form-control" %>
    </div>
  </div>


  <%# sex %>
  <div class="form-group">
    <%= f.label :sex, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :sex, class: "form-control" %>
    </div>
  </div>


  <%# age %>
  <div class="form-group">
    <%= f.label :age, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :age, class: "form-control" %>
    </div>
  </div>


  <%# unique_markings %>
  <div class="form-group">
    <%= f.label :unique_markings, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :unique_markings, class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
